<%= form_with(model: media_asset, local: true) do |form| %>
  <% if media_asset.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(media_asset.errors.count, "error") %> prohibited this media_asset from being saved:</h2>

      <ul>
      <% media_asset.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :files %>
    <%= form.file_field :files, 
      multiple: true, 
      direct_upload: true, 
      class: 'form-control' %>
  </div>
  <div class="form-group">
    <label for="media_asset_thumbnail">
      Collection Avatar Image (video &amp; multiple files)
    </label>
    <%= form.file_field :avatar, 
      multiple: false, 
      direct_upload: true, 
      class: 'form-control' %>
  </div>

  <div class="form-group">
    <% if media_asset.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', media_asset, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if media_asset.persisted? %>
      <%= link_to "Cancel", media_asset, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", media_assets_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
